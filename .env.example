# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug
API_VERSION=v1

# Database Configuration
# Why PostgreSQL? ACID compliance for financial data + excellent performance
DATABASE_URL="postgresql://payment_user:payment_pass@localhost:5432/payment_db"

# Redis Configuration  
# Why Redis? Sub-millisecond caching + atomic idempotency operations
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL="redis://localhost:6379"

# Fee Engine Configuration
FEE_ENGINE_TYPE=tiered

# Webhook Configuration (for later)
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=30000

# Provider Configuration (mock for now)
STRIPE_SECRET_KEY=sk_test_mock_key
OFFRAMP_API_KEY=mock_api_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring (for production)
# SENTRY_DSN=your_sentry_dsn_here
# DATADOG_API_KEY=your_datadog_key_here